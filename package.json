{
  "name": "music-player",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "CI=true react-scripts test",
    "eject": "react-scripts eject",
    "lint": "npm run lint-scripts && npm run lint-format",
    "lint-fix": "npm run lint-scripts -- --fix",
    "lint-scripts": "eslint \"./**/*.{ts,tsx}\" --max-warnings 0 --ignore-path .gitignore",
    "lint-format": "prettier --ignore-path .gitignore --check \"**/*.{ts,tsx,js,json,scss}\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{ts,tsx,js,json,scss}\""
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/material": "^5.11.14",
    "axios": "^1.3.4",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recoil": "^0.7.7",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/lodash": "^4.14.191",
    "@types/node": "^16.18.21",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "bundlesize": "^0.18.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.2",
    "msw": "^1.2.1",
    "prettier": "^2.5.1",
    "react-scripts": "5.0.1",
    "sass": "^1.49.0",
    "testdouble": "^3.16.4",
    "testdouble-jest": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "axios": "axios/dist/axios.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "react-app/jest",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "max-lines": [
        "error",
        300
      ],
      "react-hooks/exhaustive-deps": "off",
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --max-warnings 0 --fix --"
    ],
    "*.{ts,tsx,js,json,scss}": [
      "prettier --write --"
    ]
  },
  "bundlesize": [
    {
      "path": "./build/index.html",
      "maxSize": "2 kb"
    },
    {
      "path": "./build/**/*.js",
      "maxSize": "200 kB"
    },
    {
      "path": "./build/**/*.css",
      "maxSize": "20 kB"
    }
  ],
  "engines": {
    "node": "18.15.0"
  }
}
